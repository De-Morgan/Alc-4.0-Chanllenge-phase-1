<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="smallText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="buttonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/alcYellow</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

<style name="MeduimText" parent="TextAppearance.AppCompat.Display1">
<item name="android:textSize">25dp</item>
</style>
    <style name="BigText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>


</resources>
